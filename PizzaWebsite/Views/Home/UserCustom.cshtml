
@{
    ViewData["Title"] = "Custom Order";
}
<h1>Order a Custom Pizza</h1>

<form target="_self" method="post">
    <p>Pizza Size</p>
    <select name="Size">
        <option value="Large">Large</option>
        <option value="Medium">Medium</option>
        <option value="Small">Small</option>
    </select>
    <br><br>
    <p>Pizza Crust</p>
    <select name="Crust">
        <option value="Thick">Thick</option>
        <option value="Thin">Thin</option>
    </select>
    <br><br>
    <p>Pizza Toppings</p>
    <select name="Topping 1">
        <option value="Mushrooms">Mushrooms</option>
        <option value="Onions">Onions</option>
        <option value="Bellpepper">Bellpepper</option>
        <option value="Spinach">Spinach</option>
        <option value="Jalepenos">Jalepenos</option>
    </select>
    <br><br>
    <select name="Topping 2">
        <option value="Mushrooms">Mushrooms</option>
        <option value="Onions">Onions</option>
        <option value="Bellpepper">Bellpepper</option>
        <option value="Spinach">Spinach</option>
        <option value="Jalepenos">Jalepenos</option>
    </select>
    <br><br>
    <select name="Topping 3">
        <option value="None">None</option>
        <option value="Mushrooms">Mushrooms</option>
        <option value="Onions">Onions</option>
        <option value="Bellpepper">Bellpepper</option>
        <option value="Spinach">Spinach</option>
        <option value="Jalepenos">Jalepenos</option>
    </select>
    <br><br>
    <select name="Topping 4">
        <option value="None">None</option>
        <option value="Mushrooms">Mushrooms</option>
        <option value="Onions">Onions</option>
        <option value="Bellpepper">Bellpepper</option>
        <option value="Spinach">Spinach</option>
        <option value="Jalepenos">Jalepenos</option>
    </select>
    <br><br>
    <select name="Topping 5">
        <option value="None">None</option>
        <option value="Mushrooms">Mushrooms</option>
        <option value="Onions">Onions</option>
        <option value="Bellpepper">Bellpepper</option>
        <option value="Spinach">Spinach</option>
        <option value="Jalepenos">Jalepenos</option>
    </select>
    <br><br>
    <p>Pizza Quantity</p>
    <input type="number" max="100" min="1" />
    <br><br>
    <input type="submit" value="Add Pizza(s)" />
</form>
<p>Your current total cost is " ".</p>

<h2>@Html.ActionLink("Order More?", "CustomOrPreset", "Home")</h2>
<h2>@Html.ActionLink("Finish Order", "UserPreview", "Home")</h2>
